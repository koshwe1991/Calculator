<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textSize="40sp"
        android:padding="10dp"
        android:background="#6C6B6B"
        android:textAlignment="center"
        android:textColor="#FF9800"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/edtNum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtHead"
        android:background="@color/black"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:inputType="number"
        android:fontFamily="serif"
        android:layout_margin="10dp"
        android:text=""
        android:hint="Enter first number"
        android:padding="20dp"/>
    <EditText
        android:id="@+id/edtNum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edtNum1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:inputType="number"
        android:fontFamily="serif"
        android:layout_margin="10dp"
        android:text=""
        android:hint="Enter second number"
        android:padding="20dp"/>
    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edtNum2"
        android:background="@color/white"
        android:text="Result :"
        android:textSize="40sp"
        android:layout_margin="10dp"
        android:padding="20dp"/>
    <Button
        android:id="@+id/btnPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtResult"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnMultiply"
        style="@style/btnStyle"
        android:layout_margin="10dp"
        android:text="+"
        android:background="@drawable/btn_shape"/>
    <Button
        android:id="@+id/btnMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnPlus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnDiv"
        android:layout_margin="10dp"
        style="@style/btnStyle"
        android:text="-"
        android:background="@drawable/btn_shape"/>
    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtResult"
        app:layout_constraintLeft_toRightOf="@+id/btnPlus"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        style="@style/btnStyle"
        android:text="*"
        android:background="@drawable/btn_shape"/>
    <Button
        android:id="@+id/btnDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnMultiply"
        app:layout_constraintLeft_toRightOf="@+id/btnMinus"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        style="@style/btnStyle"
        android:text="/"
        android:background="@drawable/btn_shape"/>

</androidx.constraintlayout.widget.ConstraintLayout>